<h1>New comment</h1>

<%= form_for(@comment) do |f| %>
    <% if @comment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

          <ul>
            <% @comment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :guess %><br />
      <%= f.date_select :guess %>
    </div>
    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </div>

    <%= AYAH::Integration.new(PUBLISHER_KEY, SCORING_KEY).get_publisher_html().html_safe %>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>


<%= link_to 'Back', comments_path %>
